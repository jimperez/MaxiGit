<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
  <Properties>
    <Property name="logPath">${main:0}\logs</Property>
  </Properties>
  <Appenders>
	<Console name="GeneXusDefaultLogger" target="SYSTEM_OUT">
		<PatternLayout pattern="%d{ISO8601} [%t] %-5p %c - %m%n"/>    
	</Console>
    <RollingFile name="RollingFile" fileName="${logPath}\client.log" filePattern="${logPath}\old\app-%d{yyyy-MM-dd-HH}-%i.log.gz">
      <PatternLayout>
    	<Pattern>%d{ISO8601} [%t] %-5p %c - %m%n</Pattern>
      </PatternLayout>
      <Policies>
    	<TimeBasedTriggeringPolicy />
    	<SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
    </RollingFile>	
  </Appenders>
  <Loggers>
    <Root level="OFF">
      <AppenderRef ref="RollingFile"/>
    </Root>
	<logger name="com.genexus" level="OFF" additivity="false">
		<AppenderRef ref="RollingFile"/>
	</logger>
	<!-- User custom Logging !-->
	<logger name="GeneXusUserLog" level="ERROR" additivity="false">
		<AppenderRef ref="RollingFile"/>
	</logger>

    
  </Loggers>
</Configuration>